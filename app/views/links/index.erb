<h1> Bookmarks </h1>

<ul id='links'>
  <% @links.each do |link| %>
    <li>
      Title: <%= link.title %>
      URL:   <%= link.url   %>
    </li>
  <% end %>
</ul>

<form action="/links" method="post">
	<input type="text" name="url">
	<input type="text" name="title">
	<input type="submit" name="Add link" value="Add link">
</form>
